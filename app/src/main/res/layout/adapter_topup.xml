<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="32dp"
    app:contentPadding="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_name"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:padding="4dp"
                android:background="@drawable/shape_gradient_dashboard"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Name :"
                android:textAppearance="@style/TextField_Bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:padding="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/text_name"

                android:textAppearance="@style/TextField_Bold"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        <View
            android:id="@+id/view0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CACAF8"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_site_name"

            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:background="@drawable/shape_gradient_dashboard"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Site Name :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />
        <TextView
            android:id="@+id/tv_site_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:padding="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/text_site_name"
            app:layout_constraintTop_toBottomOf="@+id/view1" />
    </LinearLayout>


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CACAF8"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"/>



        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="#CACAF8"
            app:layout_constraintTop_toBottomOf="@+id/tv_site_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_sector_name"

            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextField_Bold"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:background="@drawable/shape_gradient_dashboard"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sector Name :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />


        <TextView
            android:id="@+id/tv_sector_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:textAppearance="@style/TextField_Bold"

            app:layout_constraintStart_toEndOf="@+id/text_sector_name"
            app:layout_constraintTop_toBottomOf="@+id/view2" />
    </LinearLayout>

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CACAF8"
            app:layout_constraintTop_toBottomOf="@+id/tv_sector_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_plot_number"

            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:textAppearance="@style/TextField_Bold"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:background="@drawable/shape_gradient_dashboard"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Plot Number :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view7" />


        <TextView
            android:id="@+id/tv_plot_Number"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextField_Bold"

            app:layout_constraintStart_toEndOf="@+id/text_plot_number"
            app:layout_constraintTop_toBottomOf="@+id/view7" />
    </LinearLayout>


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CACAF8"
            app:layout_constraintTop_toBottomOf="@+id/tv_plot_Number"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_upgradation_date"

            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="4dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_gradient_dashboard"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Upgradation Date :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />
        <TextView
            android:id="@+id/tv_upgradation_date"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"

            app:layout_constraintStart_toEndOf="@+id/text_upgradation_date"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

    </LinearLayout>




        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CACAF8"
            app:layout_constraintTop_toBottomOf="@+id/tv_upgradation_date"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_product_name"

            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:background="@drawable/shape_gradient_dashboard"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Product Name :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4" />
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"

            app:layout_constraintStart_toEndOf="@+id/text_product_name"

            app:layout_constraintTop_toBottomOf="@+id/view4" />
    </LinearLayout>




        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CACAF8"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_amount"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextField_Bold"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:background="@drawable/shape_gradient_dashboard"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Amount :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:textAppearance="@style/TextField_Bold"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/text_amount"
            app:layout_constraintTop_toBottomOf="@+id/view5" />
    </LinearLayout>





        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CACAF8"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/lightbalck"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view6" />

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:layout_marginTop="4dp"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/text_action"
            app:layout_constraintTop_toBottomOf="@+id/view6" />
    </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>